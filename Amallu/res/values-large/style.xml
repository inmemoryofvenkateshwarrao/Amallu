<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="header_style">
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/black</item>
    </style>
    
    <style name="text_size_style">
        <item name="android:textSize">24sp</item>
    </style>
    
    <style name="normal_text_size_style">
        <item name="android:textSize">23sp</item>
    </style>

    <style name="button_style" parent="@style/text_size_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">60dp</item>
    </style>
    
    <style name="small_button_style" parent="@style/button_style">
        <item name="android:background">@drawable/small_rounded_corners</item>
    </style>
    
    <style name="edit_text_style" parent="@style/text_size_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">65dp</item>
    </style>
    
    <style name="content_style" parent="@style/text_size_style">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>
    
    <style name="social_media_style">
        <item name="android:layout_marginTop">12dp</item>
    </style>
    
    <style name="social_media_icon_style">
        <item name="android:layout_marginRight">11dp</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
    </style>
    
    <style name="app_icon_style">
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginTop">55dp</item>
    </style>
    
    <style name="error_text_style">
        <item name="android:textColor">@color/red</item>
    </style>
    
    <style name="text_margin_top_style" parent="@style/normal_text_size_style">
        <item name="android:layout_marginTop">22dp</item>
    </style>
    
    <style name="radio_btn_right_style" parent="@style/text_size_style">
        <item name="android:layout_marginRight">8dp</item>
    </style>

</resources>