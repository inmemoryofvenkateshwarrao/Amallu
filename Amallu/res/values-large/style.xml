<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="header_style">
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/black</item>
    </style>
    
    <style name="text_size_style">
        <item name="android:textSize">24sp</item>
    </style>
    
    <style name="normal_text_size_style">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="button_style" parent="@style/text_size_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">60dp</item>
    </style>
    
    <style name="small_button_style" parent="@style/button_style">
        <item name="android:background">@drawable/small_rounded_corners</item>
    </style>
    
    <style name="menu_item_style" parent="@style/small_button_style">
        <item name="android:layout_marginLeft">12dp</item>
    </style>
    
    <style name="edit_text_style" parent="@style/text_size_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">65dp</item>
    </style>
    
    <style name="content_style" parent="@style/text_size_style">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">18dp</item>
    </style>
    
    <style name="social_media_style">
        <item name="android:layout_marginTop">12dp</item>
    </style>
    
    <style name="social_media_icon_style">
        <item name="android:layout_marginRight">11dp</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
    </style>
    
    <style name="app_icon_style">
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginTop">55dp</item>
    </style>
    
    <style name="video_height_style">
 		<item name="android:layout_height">230dp</item>
     </style>
    
    <style name="error_text_style">
        <item name="android:textColor">@color/red</item>
    </style>
    
    <style name="text_margin_top_style" parent="@style/normal_text_size_style">
        <item name="android:layout_marginTop">22dp</item>
    </style>
    
    <style name="radio_btn_right_style" parent="@style/text_size_style">
        <item name="android:layout_marginRight">8dp</item>
    </style>
    
    <!-- Toast Style -->
    <style name="toast_text" parent="@style/text_size_style">
       <item name="android:textColor">@color/toast</item>
     </style>   
     
     <style name="toast_bck">
 		<item name="android:layout_width">120dip</item>
         <item name="android:layout_height">80dip</item>  
     </style>
     
     <!-- Categories Screen Styles -->   
     <style name="list_row_style">
 		<item name="android:paddingLeft">9dp</item>
        <item name="android:paddingRight">9dp</item>  
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">9dp</item>
     </style>
     
     <style name="list_row_item_left_style" parent="@style/normal_text_size_style">
 		<item name="android:paddingLeft">11dp</item>
     </style>
     
     <style name="list_row_item_text_style" parent="@style/list_row_item_left_style">
 		<item name="android:maxWidth">160dp</item>
     </style>
     
     <style name="list_item_style" parent="@style/normal_text_size_style">
         <!-- <item name="android:layout_marginLeft">7dp</item> -->
         <item name="android:layout_marginRight">7dp</item>
 		<!-- <item name="android:layout_marginTop">4dp</item> -->
 		<item name="android:layout_marginBottom">4dp</item>
     </style>
     
     <!-- Header Style -->
     
     <style name="top_page_header_style">
 		<item name="android:layout_height">27dp</item>
     </style>
     
     <style name="page_header_style"  parent="@style/list_row_style">
 		<item name="android:layout_height">55dp</item>
     </style>
     
     <style name="play_screen_header_style" parent="@style/page_header_style">
 		<item name="android:layout_height">40dp</item>
 		<item name="android:layout_marginRight">30dp</item>
     </style>
     
     <!-- Channels Screen -->
     <style name="list_row_item_bottom_style" parent="@style/list_row_item_left_style">
 		<item name="android:paddingBottom">11dp</item>
     </style>
     
     <style name="channel_row_height_style" parent="@style/list_row_style">
 		<item name="android:layout_height">80dp</item>
     </style>
     
     <style name="channel_row_icon_style" parent="@style/normal_text_size_style">
 		<item name="android:layout_height">80dp</item>
 		<item name="android:layout_marginLeft">11dp</item>
     </style>
     
     <style name="channel_row_text_style" parent="@style/normal_text_size_style">
 		<item name="android:layout_marginLeft">11dp</item>
     </style>
     
     <style name="right_margin_style">
 		<item name="android:layout_marginRight">11dp</item>
     </style>
     
     <style name="text_left_margin_style" parent="@style/normal_text_size_style">
 		<item name="android:layout_marginLeft">5dp</item>
     </style>
     
     <style name="text_right_margin_style"  parent="@style/normal_text_size_style">
 		<item name="android:layout_marginRight">8dp</item>
	 </style>
     
     <style name="channel_text_rel_height_style" parent="@style/normal_text_size_style">
 		<item name="android:layout_width">250dp</item>
     </style>
     
     <style name="confirm_dialog_title_layout">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="confirm_dialog_title" parent="@style/normal_text_size_style">
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="confirm_dialog_msg" parent="@style/normal_text_size_style">
        <item name="android:layout_marginTop">30dip</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingRight">20dip</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="confirm_dialog_btns_layout">
        <item name="android:layout_marginTop">20dip</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="confirm_dialog_yes_button" parent="@style/button_style">
        <item name="android:layout_width">115dp</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
    </style>

    <style name="confirm_dialog_no_button" parent="@style/button_style">
        <item name="android:layout_width">115dp</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_gravity">right</item>
    </style>
    
    <style name="logout_button_layout">
        <item name="android:layout_marginBottom">16dip</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    
    <style name="button_left" parent="@style/normal_text_size_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:background">@drawable/rounded_corners</item>
    </style>

    <style name="button_right" parent="@style/normal_text_size_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@drawable/rounded_corners</item>
    </style>
     
</resources>