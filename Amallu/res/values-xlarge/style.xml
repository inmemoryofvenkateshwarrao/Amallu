<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="header_style">
        <item name="android:layout_height">90dp</item>
        <item name="android:background">@color/black</item>
    </style>
    
    <style name="text_size_style">
        <item name="android:textSize">35sp</item>
    </style>
    
    <style name="normal_text_size_style">
        <item name="android:textSize">33sp</item>
    </style>

    <style name="button_style" parent="@style/text_size_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_height">100dp</item>
    </style>
    
    <style name="small_button_style" parent="@style/button_style">
        <item name="android:background">@drawable/small_rounded_corners</item>
    </style>
    
    <style name="edit_text_style" parent="@style/text_size_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_height">100dp</item>
    </style>
    
    <style name="content_style" parent="@style/text_size_style">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginBottom">19dp</item>
    </style>
    
    <style name="social_media_style">
        <item name="android:layout_marginTop">20dp</item>
    </style>
    
    <style name="social_media_icon_style">
        <item name="android:layout_marginRight">23dp</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
    </style>
    
    <style name="app_icon_style">
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:layout_marginTop">100dp</item>
    </style>
    
    <style name="error_text_style">
        <item name="android:textColor">@color/red</item>
    </style>
    
    <style name="text_margin_top_style" parent="@style/normal_text_size_style">
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="radio_btn_right_style" parent="@style/text_size_style">
        <item name="android:layout_marginRight">10dp</item>
    </style>
    
    <!-- Toast Style -->
    <style name="toast_text" parent="@style/text_size_style">
       <item name="android:textColor">@color/toast</item>
     </style>   
     
     <style name="toast_bck">
 		<item name="android:layout_width">180dip</item>
         <item name="android:layout_height">140dip</item>  
     </style>
     
     <!-- Categories Screen Styles -->
      
     <style name="list_row_style">
 		<item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>  
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
     </style>
     
     <style name="list_row_item_left_style">
 		<item name="android:paddingLeft">20dp</item>
     </style>
    
</resources>