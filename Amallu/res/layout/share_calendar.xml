<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    
    <RelativeLayout
        android:id="@+id/share_cal_top_rel"
        android:layout_width="150dp"
        android:background="@color/blue"
        android:layout_height="wrap_content">
        
        <ImageView 
            android:id="@+id/icon_right_vert_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_drawer"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/image_content_desc"/>
        
        <RelativeLayout
	        android:id="@+id/share_cal_bottom_rel"
	        android:layout_width="wrap_content"
	        android:background="@color/blue"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/icon_right_vert_dot">
	        
	        <ImageView 
	            android:id="@+id/icon_share"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/ic_drawer"
	            android:layout_marginLeft="4dp"
	            android:contentDescription="@string/image_content_desc"/>
	        
	        <TextView 
		        android:id="@+id/share_txt_view"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/share"
		        android:textStyle="bold"
		        android:layout_toRightOf="@id/icon_share"
		        android:layout_marginLeft="4dp"
		        style="@style/text_view_style"/>
	        
	        
	        
            
        </RelativeLayout>
        
    </RelativeLayout>

</RelativeLayout>

