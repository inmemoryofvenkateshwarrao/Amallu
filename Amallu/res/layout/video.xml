<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <RelativeLayout
        android:id="@+id/portrait_video_rel"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	        
        <include 
	        android:id="@+id/swiping_tabs"
	        android:layout_width="fill_parent"
	        android:layout_height="200dip"
	        layout="@layout/swiping_tabs"
	        android:layout_alignParentBottom="true"
	        android:visibility="visible"/> 
        
	    <include 
	        android:id="@+id/likedislike"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        layout="@layout/likedislike"
	        android:layout_above="@id/swiping_tabs"/>
	    
	     <include 
	        android:id="@+id/vitemeo_controls"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        layout="@layout/vitameocontrols"
	        android:layout_above="@id/likedislike"/> 
    
	    <io.vov.vitamio.widget.VideoView
	        android:id="@+id/buffer"
	        android:layout_alignParentTop="true"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentRight="true"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_above="@id/vitemeo_controls"/>
	    
		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerInParent="true"
		        android:orientation="horizontal">
	
		        <!--<ProgressBar
		            android:id="@+id/probar"
		            style="?android:attr/progressBarStyleLarge"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content" /> -->
		            
		        <ProgressBar
		            android:id="@+id/probar"
		            style="@android:style/Widget.ProgressBar.Small"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content" />
		
		        <TextView
		            android:id="@+id/download_rate"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:text="" />
		
		        <TextView
		            android:id="@+id/load_rate"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:text="" />
	      </LinearLayout>
    
    </RelativeLayout>
    
    
