<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="button_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    
    <style name="edit_text_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="content_style">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">13dp</item>
        <item name="android:layout_marginRight">13dp</item>
        <item name="android:layout_marginBottom">13dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="social_media_style">
        <item name="android:layout_marginTop">18dp</item>
    </style>
    
    <style name="app_icon_style">
        <item name="android:layout_marginBottom">18dp</item>
    </style>
    
    <style name="error_text_style">
        <item name="android:textColor">@color/red</item>
    </style>
    
    <style name="text_margin_top_style">
        <item name="android:layout_marginTop">14dp</item>
    </style>

</resources>